---
import Image from "astro/components/Image.astro";
interface Props {
  featureTitle: string;
  ImageSrc: string | string[];
  ImageAlt?: string | string[];
  featureText: string;
}
const { featureTitle, ImageSrc, ImageAlt, featureText } = Astro.props;
const isMultiple = Array.isArray(ImageSrc);
---

<div class="mb-12 md:mb-20 group">
  <div
    class="bg-gray-900 rounded-xl p-4 md:p-8 shadow-2xl hover:shadow-green-500/10 transition-all duration-300 hover:border-green-600/50"
  >
    <!-- タイトル部分 -->
    <div class="mb-6">
      <div class="flex items-center space-x-3 mb-4">
        <h3
          class="text-xl md:text-2xl font-bold text-white font-serif group-hover:text-green-400 transition-colors duration-300"
        >
          {featureTitle}
        </h3>
      </div>
    </div>

    {
      isMultiple ? (
        // --- 画像3枚のパターン（横配置） ---
        <div class="flex flex-col lg:flex-row gap-8 items-start">
          <div class="lg:w-1/2">
            <div class="grid grid-cols-3 gap-3 md:gap-4">
              {ImageSrc.map((src, i) => (
                <div class="relative overflow-hidden rounded-xs shadow-lg group/image">
                  <Image
                    src={src}
                    alt={Array.isArray(ImageAlt) ? (ImageAlt[i] ?? "") : ""}
                    class="w-full object-fill transition-transform duration-300 group-hover/image:scale-105"
                  />
                  <div class="absolute inset-0 bg-black/20 opacity-0 group-hover/image:opacity-100 transition-opacity duration-300" />
                </div>
              ))}
            </div>
          </div>
          <div class="lg:w-1/2">
            <div class="bg-slate-800/50 backdrop-blur-sm rounded-xs p-6 border border-slate-600/50">
              <div
                set:html={featureText}
                class="text-white text-base md:text-lg leading-relaxed [&>br]:mb-3"
              />
            </div>
          </div>
        </div>
      ) : (
        // --- 画像1枚のパターン ---
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-center">
          <div class="relative overflow-hidden rounded-xl shadow-lg group/image">
            <Image
              src={ImageSrc}
              alt={typeof ImageAlt === "string" ? ImageAlt : ""}
              class="w-full h-auto max-h-100 object-contain transition-transform duration-300 group-hover/image:scale-105"
            />
            <div class="absolute inset-0 bg-black/20 opacity-0 group-hover/image:opacity-100 transition-opacity duration-300" />
          </div>
          <div class="bg-slate-800/50 backdrop-blur-sm rounded-xs p-6 border border-slate-600/50">
            <div
              set:html={featureText}
              class="text-white text-base md:text-lg leading-relaxed [&>br]:mb-3"
            />
          </div>
        </div>
      )
    }
  </div>
</div>
