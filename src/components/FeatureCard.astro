---
import Image from "astro/components/Image.astro";
interface Props {
  featureTitle: string;
  ImageSrc: string | string[];
  ImageAlt?: string | string[];
  featureText: string;
}
const { featureTitle, ImageSrc, ImageAlt, featureText } = Astro.props;
const isMultiple = Array.isArray(ImageSrc);
---

<div class="mb-12 md:mb-20 px-0 md:px-28">
  <h3 class="text-xl md:text-3xl font-bold text-white mb-6 md:mb-8 font-serif">
    {featureTitle}
  </h3>
  {
    isMultiple ? (
      // --- 画像3枚のパターン（横配置） ---
      <div class="flex flex-col lg:flex-row gap-8 items-start">
        <div class="grid grid-cols-3 gap-2 sm:gap-4 lg:w-1/2">
          {ImageSrc.map((src, i) => (
            <Image
              src={src}
              alt={Array.isArray(ImageAlt) ? (ImageAlt[i] ?? "") : ""}
              class="w-full h-auto object-cover rounded-lg"
            />
          ))}
        </div>
        <div
          set:html={featureText}
          class="text-white text-base md:text-xl leading-relaxed lg:w-1/2"
        />
      </div>
    ) : (
      // --- 画像1枚のパターン ---
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-center">
        <Image
          src={ImageSrc}
          alt={typeof ImageAlt === "string" ? ImageAlt : ""}
          class="w-full h-auto object-cover rounded-lg max-w-80 items-center"
        />
        <div
          set:html={featureText}
          class="text-white text-base md:text-xl leading-relaxed"
        ></div>
      </div>
    )
  }
</div>
