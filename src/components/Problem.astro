---
import { Image } from "astro:assets";
import { images } from "../assets/images";

const { IconImage } = Astro.props;
const { ImageAlt } = Astro.props;
const { problemText } = Astro.props;
---

<div
  class="flex items-center bg-yellow-300 rounded-full px-4 sm:px-6 py-3 sm:py-4 shadow-lg"
>
  <Image
    src={IconImage}
    alt={ImageAlt}
    class="w-6 h-6 sm:w-8 sm:h-8 md:w-12 md:h-12 mr-3 sm:mr-4 flex-shrink-0"
  />
  <span class="text-black font-bold text-sm sm:text-lg md:text-xl"
    >{problemText}</span
  >
</div>
